#!/bin/bash -e

# The return value of a pipeline is i) the status of the last command to exit with a non-zero status,
# or ii) zero if no command exited with a non-zero status
# => This setting prevents errors in the "annotsv pipeline" from being masked.
set -o pipefail

if [[ -z $ANNOTSV ]]; then
    echo '"ANNOTSV" environment variable not specified. Please define it before running AnnotSV' >&2
    exit 2
fi

PYTHONPATH=$ANNOTSV/share/python3:$PYTHONPATH
export PYTHONPATH

python3 -m annotsv "$@"
